<h1>Playlists</h1>

<a href="/create-playlist" class="btn btn-outline-primary">New</a>
<a href="/add-playlist" class="btn btn-outline-primary">Add existing</a>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      {{!-- <th scope="col">Duration</th> --}}
      <th scope="col">Host</th>
    </tr>
  </thead>
  <tbody>
    {{#each playlist}}
    <tr>
      <th scope="row">{{this.name}}</th>
      <th scope="row">{{this._creator}}</th>
      <td><a href="#" class="btn btn-outline-primary">Play</a></td>
      <td><a href="#" class="btn btn-outline-primary">Share</a></td>
      <td><a href="#" class="btn btn-outline-primary">Edit</a></td>
      <td><a href="#" class="btn btn-outline-primary">Delete</a></td>
    </tr>
    {{/each}}
  </tbody>
</table>
<div class="container">
  <div class="row align-items-center">
    <div class="col-auto mr-auto text-white">
      <h3 class="text-primary">{{playlist.name}}</h3>
    </div>
    {{#if user}}
    <div class="col-auto">
      <a href="/create-playlist" class="btn btn-primary">New song</a>
    </div>
    {{/if}}
  </div>
</div>

  {{!-- <a href="/playlist-details/{{{playlistID}}}/push" class="btn btn-outline-primary">PUSH TO SPOTIFY</a> --}}


<table class="table table-dark">
  <thead >
    <tr>
      <th scope="col">NAME</th>
      <th scope="col">ARTIST</th>
      <th scope="col">VOTES</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>

    {{#each track}}
    <tr>
      <th scope="row">{{{this.name}}}</th>
      <td>{{{this.artist}}}</td>
      <td>{{{this._userWhoVoted.length}}}</td>
      {{#if ../user}}
      <td><a href="/vote/{{this.spotifyTrackId}}/{{../playlistID}}" class="btn btn-outline-secondary">Vote</a></td>
      {{!-- <a><a href="#" class="btn btn-outline-primary">Delete</a></a> --}}
      {{/if}}
    </tr>
    {{/each}}
  </tbody>
</table>
<div class="container">
  <div class="row align-items-center">
    <div class="col-auto mr-auto">
      <h1>Events</h1>
    </div>
    {{#if user}}
    <div class="col-auto">
      <a href="/create-playlist" class="btn btn-primary">Add a New Event</a>
    </div>
    {{/if}}
  </div>
</div>

<hr>

<div class="row d-flex flex-wrap">
{{#each playlist}}
  <div class="col-sm-6">

    <div class="card mb-3" style="max-width: 540px;">
      <div class="row no-gutters">
        <div class="col-sm">
    
          <img src="{{this.imgPath}}" class="card-img" alt="...">
        </div>
        <div class="col-sm-6">
          <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <p class="card-text">@ {{this.location}}</p>
            <a href="/playlist-details/{{this.id}}" class="btn btn-outline-primary btn-sm">Join</a>
            <p class="card-text"><small class="text-muted">hosted by {{this._creator.username}}</small></p>
          </div>
        </div>
      </div>
    </div>

  </div>
{{/each}}
</div>